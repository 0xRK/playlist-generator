{
    "name": "playlist-generator-root",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "npm-run-all --parallel start:backend start:client",
        "start:backend": "npm run start --prefix backend",
        "start:client": "npm run dev --prefix client",
        "install:all": "npm install --prefix backend && npm install --prefix client",
        "stop:windows": "taskkill /F /IM node.exe"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "npm-run-all": "^4.1.5"
    }
}